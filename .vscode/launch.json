{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug akas_emulator",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/AKASimulator",
      "args": [
        "--chip",
        "stm32f103c8t6",
        "--elf",
        "${workspaceFolder}/akas_working_space/test_driver/firmware.elf",
        "--stub",
        "${workspaceFolder}/akas_working_space/test_driver/stub_info.txt",
      ],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": true,
      "MIMode": "gdb"
    }
  ]
}